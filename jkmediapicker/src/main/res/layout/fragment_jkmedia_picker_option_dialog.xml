<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".dialog.JKMediaPickerOptionDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="16dp">

        <FrameLayout
            android:id="@+id/bro_video_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/video_by_gallery_iv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_video_gallery"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/bro_video_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/br_vid"
                android:layout_gravity="bottom"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/bro_doc_file_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/file_by_gallery_iv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_attachment"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/bro_file_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/br_file"
                android:layout_gravity="bottom"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/bro_audio_file_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/bro_audio_iv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_mic"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/bro_audio_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/br_aud"
                android:layout_gravity="bottom"/>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <FrameLayout
            android:id="@+id/cap_img_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_by_camera_iv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_camera"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/cap_img_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cap_img"
                android:layout_gravity="bottom"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/bro_img_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/image_by_gallery_iv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_gallery"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/bro_img_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/br_img"
                android:layout_gravity="bottom"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/cap_vid_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/video_by_camera_iv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_video_camera"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/cap_vid_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cap_vid"
                android:layout_gravity="bottom"/>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>